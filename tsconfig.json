{
    "compilerOptions": {
        "target": "es2015",
        "module": "ES2022",
        "baseUrl": "./",
        "paths": {
            "@trz/*": ["src/*/index", "src/*"],
        },
        "strict": true,
        "moduleResolution": "bundler",
        "jsx": "react",
        "outDir": "./dist/",
        "sourceMap": true,
        "noImplicitAny": false,
        "allowJs": true,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
    },
    "include": ["./src/*", "./src/types/*"],
    "exclude": ["node_modules"]
}